<div class="wrapper">
  <div class="side-bar">
    <div class="side-bar-header">
      <div class="header-name">
        <%= link_to current_user.nickname, "#"%>
      </div>
      <div class="create-room">
        <%= link_to 'ルーム作成', new_room_path %>
      </div>
    </div>

    <div class="rooms">
      <%= form_with url: search_rooms_path, method: :get, class: "room-search-form", local: true do |f| %>
        <%= f.text_field :name, placeholder: "ルーム名を検索" %>
        <%= f.submit "検索" %>
      <% end %>
      <div class="room-search">
        〜ルーム検索結果〜
      </div>
      <% @rooms.each do |room| %>
        <div class="room">
          <div class="room-name">
            <%= link_to room.name, asign_room_path(room) %>
          </div>
        </div>
      <% end %>
    </div>
  </div> 
</div>