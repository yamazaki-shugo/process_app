<%# <p id="notice"><%= notice</p>  %>
<%= render "shared/header" %>
<div class="event">
<h1>スケジュール</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '詳細', room_event_path(params[:room_id], event.id) %></td>
        <td><%= link_to '編集', edit_room_event_path(params[:room_id], event.id) %></td>
        <td><%= link_to '消去',room_event_path(params[:room_id], event.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'スケジュールを登録', new_room_event_path(params[:room_id]) %>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= link_to event.title, room_events_path(params[:room_id]) %>
    </div>
  <% end %>
<% end %>
</div>